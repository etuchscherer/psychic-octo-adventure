%form.form-horizontal.contact{:action => '/email', :method => 'POST', :novalidate => 'novalidate'}
  %fieldset
    %legend
      %h2 Send me an email
      %small powered by send grid
    .control-group
      %label.control-label{:for => 'from'} From:
      .controls
        %input.input-xlarge{:type => 'text', :name => 'from', :placeholder => 'john@doe.com', :required => 'true', :email => 'true'}
        %input.hidden{:name => 'subject', :value => 'Communication from eric.tuchscherer.me'}
    .control-group
      %label.control-label{:for => 'body'} Body:
      .controls
        %textarea.input-xlarge{:placeholder => 'your messageâ€¦', :name => 'body', :rows => 3, :required => 'true'}
    .control-group
      .controls
        %button.btn.btn-primary.span2 Send
        =link_to 'Cancel', '/contact', {:class => 'btn'}
